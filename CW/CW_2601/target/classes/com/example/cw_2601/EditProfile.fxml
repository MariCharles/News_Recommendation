<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Button?>

<GridPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.cw_2601.EditProfileController"
          alignment="CENTER" hgap="10" vgap="15" style="-fx-background-color: white; -fx-padding: 40px;">

    <Label text="Edit Profile" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: gold;"
           GridPane.columnSpan="2" GridPane.rowIndex="0" />

    <Label text="Current Password:" style="-fx-font-size: 16px; -fx-text-fill: gold;" GridPane.rowIndex="1" GridPane.columnIndex="0" />
    <PasswordField fx:id="currentPasswordField" promptText="Enter current password"
                   style="-fx-border-color: gold; -fx-font-size: 14px; -fx-padding: 8px;"
                   GridPane.rowIndex="1" GridPane.columnIndex="1" />

    <Label text="New Password:" style="-fx-font-size: 16px; -fx-text-fill: gold;" GridPane.rowIndex="2" GridPane.columnIndex="0" />
    <PasswordField fx:id="newPasswordField" promptText="Enter new password"
                   style="-fx-border-color: gold; -fx-font-size: 14px; -fx-padding: 8px;"
                   GridPane.rowIndex="2" GridPane.columnIndex="1" />

    <Label text="Confirm Password:" style="-fx-font-size: 16px; -fx-text-fill: gold;" GridPane.rowIndex="3" GridPane.columnIndex="0" />
    <PasswordField fx:id="confirmPasswordField" promptText="Confirm new password"
                   style="-fx-border-color: gold; -fx-font-size: 14px; -fx-padding: 8px;"
                   GridPane.rowIndex="3" GridPane.columnIndex="1" />

    <Label fx:id="errorLabel" textFill="red" style="-fx-font-size: 14px; -fx-font-style: italic;"
           GridPane.rowIndex="4" GridPane.columnSpan="2" />

    <Button fx:id="saveButton" text="Save Changes" onAction="#saveChanges"
            style="-fx-background-color: gold; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10px 20px; -fx-border-radius: 15px;"
            GridPane.rowIndex="5" GridPane.columnSpan="2" />
</GridPane>

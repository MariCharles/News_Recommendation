<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Label?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.cw_2601.HomePageController" spacing="20" alignment="CENTER" style="-fx-background-color: white; -fx-padding: 40px;">
    <Text text="Welcome to the Dashboard!" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: gold;" />

    <Label fx:id="welcomeLabel" text="Welcome, User!" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: gold;" />

    <VBox spacing="15" style="-fx-alignment: center;">
        <Button text="View Articles" onAction="#viewArticles"
                style="-fx-background-color: gold; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10px 20px; -fx-border-radius: 15px;"/>

        <Button text="Get Recommendations" onAction="#getRecommendations"
                style="-fx-background-color: gold; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10px 20px; -fx-border-radius: 15px;"/>

        <Button text="Liked Articles" onAction="#likedArticles"
                style="-fx-background-color: gold; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10px 20px; -fx-border-radius: 15px;"/>

        <Button text="Skipped Articles" onAction="#skippedArticles"
                style="-fx-background-color: gold; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10px 20px; -fx-border-radius: 15px;"/>

        <Button text="Edit Profile" onAction="#editProfile"
                style="-fx-background-color: gold; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10px 20px; -fx-border-radius: 15px;"/>

        <Button text="Log Out" onAction="#handleLogout"
                style="-fx-background-color: gold; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10px 20px; -fx-border-radius: 15px;"/>
    </VBox>
</VBox>


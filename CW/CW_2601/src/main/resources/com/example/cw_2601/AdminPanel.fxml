<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.StackPane?>

<StackPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.cw_2601.AdminPanelController"
           style="-fx-background-color: white;">

    <VBox spacing="20" alignment="CENTER" style="-fx-padding: 50;">

        <Text text="Admin Panel"
              style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-fill: gold; -fx-font-family: 'Arial';" />

        <VBox spacing="10" alignment="CENTER">
            <Button fx:id="fetchArticlesButton" text="Fetch Articles"
                    onAction="#fetchArticles"
                    style="-fx-background-color: gold; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-padding: 10px 30px; -fx-border-radius: 15px; -fx-background-radius: 15px;"/>

            <Button fx:id="addArticlesButton" text="Add Articles"
                    onAction="#addArticles"
                    style="-fx-background-color: gold; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-padding: 10px 30px; -fx-border-radius: 15px; -fx-background-radius: 15px;"/>

            <Button fx:id="logoutButton" text="Log Out"
                    onAction="#handleLogout"
                    style="-fx-background-color: red; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-padding: 10px 30px; -fx-border-radius: 15px; -fx-background-radius: 15px;"/>
        </VBox>

    </VBox>
</StackPane>

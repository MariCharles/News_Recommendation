<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.StackPane?>

<StackPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.cw_2601.WelcomeController">

    <VBox spacing="30" alignment="CENTER" style="-fx-padding: 50; -fx-background-color: rgba(255, 255, 255, 0.8); -fx-background-radius: 15;">

        <Text text="Welcome"
              style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-fill: gold; -fx-font-family: 'Arial';" />

        <Text text="A seamless experience awaits you"
              style="-fx-font-size: 20px; -fx-fill: #333333; -fx-font-family: 'Arial'; -fx-font-style: italic;" />

        <VBox spacing="15" alignment="CENTER">
            <Button fx:id="signInButton" text="Sign In"
                    onAction="#goToSignInPage"
                    style="-fx-background-color: gold; -fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold; -fx-padding: 12px 40px; -fx-border-radius: 20px; -fx-background-radius: 20px;" />

            <Button fx:id="signUpButton" text="Sign Up"
                    onAction="#goToSignUpPage"
                    style="-fx-background-color: gold; -fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold; -fx-padding: 12px 40px; -fx-border-radius: 20px; -fx-background-radius: 20px;" />

            <Button fx:id="adminButton" text="Admin"
                    onAction="#validateAdmin"
                    style="-fx-background-color: #555555; -fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold; -fx-padding: 12px 40px; -fx-border-radius: 20px; -fx-background-radius: 20px;" />
        </VBox>

    </VBox>
</StackPane>
